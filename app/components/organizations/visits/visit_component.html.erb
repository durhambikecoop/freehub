<!-- Visitor Information for people signed in to the bike shop, uses tailwind -->
<!--   attributes: @person.full_name, @person.email, @person.phone, start_at -->
<!--   card will be compact and will put content on one line -->

<div class="bg-white shadow overflow-hidden flex justify-between rounded-md">
  <div class="px-2 py-3 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= @person.full_name %>
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= @person.email %>
    </p>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= @person.phone %>
    </p>
  </div>
  <div class="px-2 py-3">
    <div>
      <dt class="text-sm font-medium text-gray-500">
        Start Time
      </dt>
      <dd class="mt-1 text-sm text-gray-900">
        <%= start_at %>
      </dd>
      </div>
  </div>
</div>
