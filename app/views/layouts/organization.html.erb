<!DOCTYPE html>
<html>
  <head>
    <title><%= @org.name %> | <%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "index", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-stone-50">
    <%= render Organization::ShellComponent.new(org: @org, title: @page_title, links: organization_navigation(@org)) do %>
      <%= yield %>
    <% end %>
  </body>
</html>
