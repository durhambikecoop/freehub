<div class="grid grid-cols-2 gap-4">
  <%= turbo_frame_tag 'visits' do %>
    <h1 class="text-xl text-gray-700 py-2">
      There are <%= @visits.count %> people in the shop on <%= @current_date.strftime("%A, %B %d, %Y") %>
    </h1>
    <!-- Show next date available -->
    <% if @next_date.present? %>
      <div class="mb-2">
        <%= link_to "Show #{@next_date.strftime("%A, %B %d, %Y")}", organization_visits_path(@org, date: @next_date), class: 'text-blue-500 text-sm' %>
      </div>
    <% end %>
    <div class="flex flex-col gap-1">
      <%= render Organizations::Visits::VisitComponent.with_collection(@visits) %>
    </div>
  <% end %>
  <div>
    <%= render Organizations::PersonCheckInComponent.new(org: @org) %>
  </div>
</div>
